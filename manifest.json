{
    "manifest_version": 2,
    "name": "斗鱼抢鱼丸",
    "version": "0.1.1",
    "description": "斗鱼的快速抢鱼丸!会自动关闭未关注主播的窗口。",
    "icons": {
      "128": "icon/128.png",
      "16": "icon/16.png",
      "48": "icon/48.png"
    },
    "permissions": [
      "tabs", "*://www.douyutv.com/*"
    ],
    "content_scripts": [
        {
            "all_frames": true,
            "js": ["loader.js"],
            "matches": ["*://www.douyu.com/*"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [ "*" ]
} 
